#!/usr/bin/env ruby

require "json"
require "providers"
require "transmission_client"
require "optparse"

options = {
  :database => File.expand_path("~/nyaa.db"),
  :provider => "HorribleSubs"
}

# Show banner if there are no arguments
if ARGV.empty?
  ARGV << "-h"
end

optparse = OptionParser.new do |opts|
  opts.banner = "Usage: nyaa [OPTIONS] QUERY"

  opts.on("-d DATABASE", "--database=DATABASE", "SQLite3 Database") do |db|
    options[:database] = File.expand_path db
  end

  opts.on("-p PROVIDER", "--provider=PROVIDER", "One of: HorribleSubs, Blackjaxx") do |provider|
    options[:provider] = provider
  end

  opts.on_tail("-h", "--help", "Shows this help") do
    puts opts
    exit
  end

end

optparse.parse!

# Show banner if there is no query
if ARGV.length == 0
  puts optparse
  exit 1
end

anime_series = ARGV
transmission_bt = TransmissionClient.new options

anime_series.each do |series|
  transmission_bt.add_magnets Kernel.const_get(options[:provider]).search_for(series)
end
