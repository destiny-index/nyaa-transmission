#!/usr/bin/env ruby

require "json"
require "horrible_subs"
require "transmission_client"

SQLITE_DB = File.expand_path "~/nyaa.db"

anime_series = JSON.parse File.read(ARGV[0])
transmission_bt = TransmissionClient.new :database => SQLITE_DB


anime_series.each do |series|
  transmission_bt.add_magnets HorribleSubs.search_for(series)
end
